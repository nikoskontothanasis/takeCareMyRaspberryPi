<project name="Replace_My_IP" default="init" basedir=".">
  <target name="init">
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="build_dir"/>
    <loadfile property="IP"
          srcFile="archiveIP.txt"/>
    <copy file="/home/pi/Templates/vpn_template.ovpn" tofile="build_dir/remoteConnection.ovpn">
    	<filterchain>
       <replacetokens>
            <token key="IP" value="${IP}"/>
       </replacetokens>
    	</filterchain>
	</copy>
  </target> 
</project>
